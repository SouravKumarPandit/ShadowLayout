<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShadowRectLayout">
        <attr name="roundCornerRadius" format="float" />
        <attr name="shadowRectColor" format="color" />
        <attr name="shadowPadding" format="dimension" />
        <attr name="offsetX" format="float" />
        <attr name="offsetY" format="float" />
        <attr name="baseColor" format="color" />
        <attr name="imgGradientColor1" format="color" />
        <attr name="imgGradientColor2" format="color" />
        <attr name="shadowRadius" format="dimension" />
        <attr name="imgBackground" format="integer" />

        <attr name="shadow_left" format="boolean" />
        <attr name="shadow_Right" format="boolean" />
        <attr name="shadow_bottom" format="boolean" />
        <attr name="shadow_Top" format="boolean" />
    </declare-styleable>


    <declare-styleable name="BaseView">

        <!--色值-->
        <attr name="better_color" format="color" />

        <attr name="better_mode" format="enum">
            <!--矩形-->
            <enum name="square" value="0" />
            <!--圆形-->
            <enum name="circle" value="1" />
        </attr>

        <!--圆角半径-->
        <attr name="better_round_radius" format="dimension" />

        <!--边线属性-->
        <attr name="better_border_width" format="dimension" />
        <attr name="better_border_color" format="color" />

        <!--位置颜色-->
        <attr name="better_color_top" format="color" />
        <attr name="better_color_bottom" format="color" />
        <attr name="better_color_left" format="color" />
        <attr name="better_color_right" format="color" />

    </declare-styleable>


    <declare-styleable name="BetterCardView">
        <!--阴影颜色-->
        <attr name="shadowColor" format="color" />
        <!--阴影偏移量-->
        <attr name="shadowDx" format="dimension" />
        <attr name="shadowDy" format="dimension" />


        <attr name="cardElevation" format="dimension" />\

        <attr name="cardCornerRadius" format="dimension" />
        <attr name="cardCornerRadiusTL" format="dimension" />
        <attr name="cardCornerRadiusTR" format="dimension" />
        <attr name="cardCornerRadiusBL" format="dimension" />
        <attr name="cardCornerRadiusBR" format="dimension" />

        <attr name="cardShadowMargin" format="dimension" />
        <attr name="cardShadowMarginTop" format="dimension" />
        <attr name="cardShadowMarginLeft" format="dimension" />
        <attr name="cardShadowMarginRight" format="dimension" />
        <attr name="cardShadowMarginBottom" format="dimension" />

        <attr name="backgroundColor" format="color" />
        <attr name="foregroundColor" format="color" />
        <attr name="android:foreground" />
    </declare-styleable>

    <declare-styleable name="BetterTabLayout">

        <attr name="tabTopLineHeight" format="color" />
        <attr name="tabTopLineColor" format="dimension" />

        <attr name="tabBottomLineColor" format="color" />
        <attr name="tabBottomLineHeight" format="dimension" />

        <attr name="tabIndicatorInFront" format="boolean" />
        <attr name="tabIndicatorWithoutPadding" format="boolean" />
        <attr name="tabIndicatorAlwaysInCenter" format="boolean" />

        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabIndicatorHeight" format="dimension" />
        <attr name="tabIndicatorHorizontalPadding" format="dimension" />

        <attr name="tabIndicatorGravity" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="center" value="2" />
        </attr>

        <attr name="tabDividerColor" format="color|reference" />
        <attr name="tabDividerHeight" format="dimension" />

        <attr name="tabBackground" format="reference" />
        <attr name="tabTextAllCaps" format="boolean" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextHorizontalPadding" format="dimension" />
        <attr name="tabTextMinWidth" format="dimension" />
        <attr name="tabLayoutId" format="reference" />
        <attr name="tabTextViewId" format="reference" />
        <attr name="tabDistributeEvenly" format="boolean" />
        <attr name="tabClickable" format="boolean" />
        <attr name="tabTitleOffset" format="dimension">
            <enum name="auto_center" value="-1" />
        </attr>

    </declare-styleable>
